<!--pages/mine/mine.wxml-->
<view class="container">
    <view>这里是我的个人中心！</view>
    <image class="study-card" src="{{ baseUrl + '/pages/005.png' }}"></image>

    <view class="user-info" wx:if="{{ isLogin }}">
        <image mode="widthFix" class="avatar" src="{{ avatarUrl }}"></image>

        <view class="info-area">
            <text>昵称：</text>
            <text>{{ nickName }}</text>
        </view>

        <view class="info-area">
            <text>性别：</text>
            <text>{{ gender }}</text>
        </view>

        <view class="info-area">
            <text>地址：</text>
            <text>{{ address }}</text>
        </view>
    </view>

    <button class="test-btn" type="primary" bindtap="getUserInfo">获取用户信息</button>
    <button class="test-btn" type="primary" bindtap="showDialogHandle">测试弹窗组件</button>


    <mp-dialog title="这是一个弹窗" show="{{ showDialog }}" bindbuttontap="tapDialogButton" buttons="{{[{text: '取消'}, {text: '确认'}]}}">
        <view>欢迎使用微信小程序</view>
    </mp-dialog>
</view>
